{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2016",
    ],
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop" : true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": [
    "bzl-output/**/*",
    "dist/**/*",
    "tmp/**/*",
    "out-tsc/**/*",
    "bazel-out/**/*"
  ]
}
